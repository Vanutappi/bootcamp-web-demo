@model WorkhourDemo.Workhour

@{
                /**/

                ViewBag.Title = "Create";
}

<h2>Lisää Uusi Työtunti-ilmoitus</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Työtunti</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <!--@Html.LabelFor(model => model.Employee_ID, "Employee_ID", htmlAttributes: new { @class = "control-label col-md-2" })-->
            <label class = "control-label col-md-2">Työntekijä</label>
            <div class="col-md-10">
                @Html.DropDownList("Employee_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Employee_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <!--@Html.LabelFor(model => model.Project_ID, "Project_ID", htmlAttributes: new { @class = "control-label col-md-2" })-->
            <label class="control-label col-md-2">Projekti</label>
            <div class="col-md-10">
                @Html.DropDownList("Project_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Project_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <!--@Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })-->
            <label class="control-label col-md-2">Päivämäärä</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <!--@Html.LabelFor(model => model.Hours, htmlAttributes: new { @class = "control-label col-md-2" })-->
            <label class="control-label col-md-2">Tunnit</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Hours, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Hours, "", new { @class = "text-danger" })
            </div>
        </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lisää" class="btn btn-default" />
                </div>
            </div>
        </div>

        <script>
            $(document).ready(function () {
                $("#Date").datetimepicker({
                    format: "DD/MM/YYYY"
                }).on('dp.change', function (e) {
                    $(this).data('DateTimePicker').hide();
                });
            });
        </script>

    }

    <div>
        @Html.ActionLink("Takaisin listaukseen", "Index")
    </div>



    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
