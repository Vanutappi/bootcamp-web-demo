@model WorkhourDemo.Project

@{
    ViewBag.Title = "Edit";
}

<h2>Muokkaa</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Projekti</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Project_ID)

        <div class="form-group">
            <!--@Html.LabelFor(model => model.Project_Name, htmlAttributes: new { @class = "control-label col-md-2" })-->
            <label class = "control-label col-md-2">Projektin nimi</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Project_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Project_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tallenna" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Takaisin listaukseen", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
